<div class="container">
  <div class="row">
    <div class="col-6">
      <h1 class="text-center pt-2 pb-2"><strong> Registro de nuevo personaje</strong></h1>
        <%= simple_form_for (@character) do |f| %>
          <div class="row">
            <div class="col-12 col-lg-6">
              <%= f.input :name, label: "Nombre del personaje:", placeholder: "Nombre del personaje", required: true %>
            </div>
            <div class="col-12 col-lg-6 ">
              <%= f.input :actor, label: "Actor/Actríz:", placeholder: "Nombre del Actor/Actríz", required: true %>
            </div>
          </div>
          <div class="">
            <%= f.input :review, label: "Review del personaje:",
            placeholder: "Review del personaje", required: true %>
          </div>
          <div class="">
            <%= f.input :image_url, label: "Imagen a cargar", as: :file,
            input_html: { multiple: true }, required: true %>
          </div>
          <div class="d-flex justify-content-around pt-3 pb-5">
            <%= f.submit "Enviar", class: "btn btn-ghost pb-3" %>
            <%= link_to "Salir", characters_path, class: "btn btn-ghost" %>
          </div>
        <% end %>
    </div>
    <div class="col-6">
      <div class="">
        <%#= image_tag "planeta.png", class:"imagen-pro-new" %>
      </div>
    </div>
  </div>
</div>
